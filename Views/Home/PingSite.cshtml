@model WSP_2.Models.FoundWebSiteAddress
@{
    ViewBag.Title = "Ping site";
}

<div>
    <h2 style="text-align:center;">Ping site</h2>
</div>


@using (Ajax.BeginForm("Ping", new AjaxOptions
{
    UpdateTargetId = "results",
    LoadingElementId = "loading",
    LoadingElementDuration = 100,
}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Specify the desired URL</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UrlAddress)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.UrlAddress)
            @Html.ValidationMessageFor(model => model.UrlAddress)
        </div>

        <p>
            <input type="submit" value="Ping" />
        </p>
    </fieldset>
}

<div id="loading" style="display:none; color:Red; font-weight:bold;">
    <p>Request is processed...</p>
</div>

<div id="results"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

